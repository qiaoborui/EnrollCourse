@using WebApplication2.Models;
@model List<Student>

@{
    Layout = "_Layout";
}

<header class="panel-heading">
    <div class="panel-actions">
        <a href="#" class="fa fa-caret-down"></a>
        <a href="#" class="fa fa-times"></a>
    </div>
    <style>
        .container {
            display: flex;
            justify-content: space-around;
            align-items: center;
        }
    </style>

    <div class="container">
        <h2 class="panel-title">学生列表</h2>
        <a href="/Student/StudentEdit" class="mb-xs mt-xs mr-xs btn btn-primary">增加学生</a>
    </div>
</header>

<div class="panel-body">
    <div class="table-responsive">
        <table class="table mb-none">
            <thead>
            <tr>
                <th>学号</th>
                <th>姓名</th>
                <th>班级</th>
                <th>操作</th>
            </tr>
            </thead>
            <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.StudentId</td>
                    <td>@item.StudentName</td>
                    <td>@item.Class</td>
                    <td class="actions">
                        <a href="/Student/StudentEdit?id=@item.StudentId"><i class="fa fa-pencil"></i></a>
                        <a href="/Student/StudentDelete?id=@item.StudentId" class="delete-row"><i class="fa fa-trash-o"></i></a>
                    </td>
                </tr>
            }
                            
            </tbody>
        </table>
    </div>
    
</div>

  
      
