@model Student
@{
    Layout = "_Layout";
}

<header class="panel-heading">
    <div class="panel-actions">
        
    </div>
    <h2 class="panel-title">学生信息修改</h2>
</header>

<div class="panel-body">
    <form class="form-horizontal form-bordered" method="get" action="@Url.Action("AddStudent","Student")">
        <div class="form-group">
            <label class="col-md-3 control-label" for="inputReadOnly">学号</label>
            <div class="col-md-6">
                <input type="text" value="@Model?.StudentId" name="StudentId" class="form-control"
                       @(Model?.StudentId != null ? "readonly=\"readonly\"" : "") required="required"/>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-3 control-label" for="inputDefault">姓名</label>
            <div class="col-md-6">
                <input type="text" class="form-control" name="StudentName" value="@Model?.StudentName" required="required"/>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-3 control-label" for="inputDefault">班级</label>
            <div class="col-md-6">
                <input type="text" class="form-control" name="Class" value="@Model?.Class" required="required"/>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-3 control-label" for="inputDefault">密码</label>
            <div class="col-md-6">
                <input type="text" class="form-control" name="InitialPassword" value="@Model?.InitialPassword" required="required"/>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-3 control-label"></label>
            <div class="col-md-8">
                <div class="row">
                    <div class="col-sm-2">
                        <button type ="submit" class="mb-xs mt-xs mr-xs btn btn-primary">保存</button>
                    </div>
                    <div class="visible-xs mb-md"></div>
                    <div class="col-sm-3">
                        <button type ="button" onclick="location.href='/Student/ShowAllStudent'" class="mb-xs mt-xs mr-xs btn btn-default">返回</button>
                    </div>
                </div>
            </div>
        </div>
        </form>
    </div>
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
